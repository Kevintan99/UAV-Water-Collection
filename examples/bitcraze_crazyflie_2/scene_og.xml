<mujoco model="CF2 River Scene">
  <include file="obstacles.xml" />
  <include file="cf2_with_pendulum.xml" />
  <statistic center="0 0 0.1" extent="0.2" meansize=".05" />
  
  <visual>
    <headlight diffuse="0.8 0.9 1.0" ambient="0.4 0.5 0.6" specular="0.3 0.3 0.4" />
    <rgba haze="0.7 0.85 1.0 1" />
    <global azimuth="-30" elevation="-15" ellipsoidinertia="true" />
  </visual>
  
  <asset>
    <!-- River/Water Skybox -->
    <texture type="skybox" builtin="gradient" 
             rgb1="0.6 0.8 1.0" rgb2="0.2 0.4 0.7" 
             width="512" height="3072" />
    
    <!-- Water Surface Texture -->
    <texture type="2d" name="water_surface" builtin="gradient" 
             rgb1="0.1 0.3 0.6" rgb2="0.2 0.5 0.8" 
             width="512" height="512" />
    
    <!-- Water Ripples Texture -->
    <texture type="2d" name="water_ripples" builtin="checker" 
             rgb1="0.15 0.4 0.7" rgb2="0.25 0.5 0.8" 
             markrgb="0.3 0.6 0.9" mark="edge"
             width="100" height="100" />
    
    <!-- River Bank Texture -->
    <texture type="2d" name="riverbank" builtin="checker" 
             rgb1="0.4 0.3 0.2" rgb2="0.3 0.25 0.15" 
             markrgb="0.5 0.4 0.3" mark="cross"
             width="200" height="200" />
    
    <!-- Water Material with High Reflectance -->
    <material name="water_material" 
              texture="water_ripples" 
              texuniform="true" 
              texrepeat="8 8" 
              reflectance="0.7" 
              rgba="0.2 0.5 0.8 0.85" 
              specular="0.8" 
              shininess="0.9" />
    
    <!-- Deep Water Material -->
    <material name="deep_water" 
              texture="water_surface" 
              texuniform="true" 
              texrepeat="3 3" 
              reflectance="0.6" 
              rgba="0.1 0.3 0.6 0.9" 
              specular="0.7" 
              shininess="0.8" />
              
    <!-- River Bank Material -->
    <material name="bank_material" 
              texture="riverbank" 
              texuniform="true" 
              texrepeat="4 4" 
              reflectance="0.1" 
              rgba="0.4 0.3 0.2 1.0" />
  </asset>
  
  <worldbody>
    <!-- Enhanced lighting for water environment -->
    <light pos="0 0 2.0" dir="0 0 -1" directional="true" 
           diffuse="0.9 0.95 1.0" specular="0.8 0.9 1.0" />
    
    <!-- Additional ambient lighting to simulate sky reflection -->
    <light pos="2 2 1.5" dir="-0.5 -0.5 -1" directional="false" 
           diffuse="0.3 0.4 0.5" specular="0.2 0.3 0.4" />
    
    <!-- Main water surface - NO COLLISION -->
    <geom name="water_surface" size="0 0 0.02" type="plane" 
          material="water_material" pos="0 0 -0.02" 
          contype="0" conaffinity="0" />
    
    <!-- Deeper water layer for visual depth - NO COLLISION -->
    <geom name="deep_water_layer" size="0 0 0.01" type="plane" 
          material="deep_water" pos="0 0 -0.05" 
          contype="0" conaffinity="0" />
    
    <!-- Invisible collision floor (simple plane for physics) -->
    <geom name="collision_floor" size="0 0 0.01" type="plane" 
          pos="0 0 -0.1" rgba="0 0 0 0" />
    
    <!-- River banks - VISUAL ONLY, NO COLLISION -->
    <geom name="north_bank" type="box" size="5 0.3 0.1" 
          pos="0 3 0.05" material="bank_material" 
          contype="0" conaffinity="0" />
    <geom name="south_bank" type="box" size="5 0.3 0.1" 
          pos="0 -3 0.05" material="bank_material" 
          contype="0" conaffinity="0" />
    <geom name="east_bank" type="box" size="0.3 3 0.1" 
          pos="5 0 0.05" material="bank_material" 
          contype="0" conaffinity="0" />
    <geom name="west_bank" type="box" size="0.3 3 0.1" 
          pos="-5 0 0.05" material="bank_material" 
          contype="0" conaffinity="0" />
    
    <!-- Underwater rocks/features - VISUAL ONLY, NO COLLISION -->
    <geom name="underwater_rock1" type="ellipsoid" size="0.2 0.15 0.1" 
          pos="1.5 -1.2 -0.08" rgba="0.3 0.3 0.4 0.8" 
          contype="0" conaffinity="0" />
    <geom name="underwater_rock2" type="ellipsoid" size="0.15 0.2 0.08" 
          pos="-1.8 0.8 -0.06" rgba="0.4 0.3 0.3 0.8" 
          contype="0" conaffinity="0" />
    <geom name="underwater_rock3" type="ellipsoid" size="0.1 0.25 0.06" 
          pos="0.5 1.5 -0.04" rgba="0.35 0.35 0.4 0.8" 
          contype="0" conaffinity="0" />
    
    <!-- Water plants/seaweed effect - VISUAL ONLY, NO COLLISION -->
    <geom name="water_plant1" type="capsule" size="0.02" 
          fromto="2.1 -0.8 -0.1  2.1 -0.8 0.3" 
          rgba="0.2 0.6 0.3 0.6" 
          contype="0" conaffinity="0" />
    <geom name="water_plant2" type="capsule" size="0.015" 
          fromto="-1.5 1.2 -0.08  -1.5 1.2 0.25" 
          rgba="0.1 0.5 0.2 0.6" 
          contype="0" conaffinity="0" />
    <geom name="water_plant3" type="capsule" size="0.02" 
          fromto="0.8 -1.8 -0.06  0.8 -1.8 0.35" 
          rgba="0.3 0.7 0.4 0.6" 
          contype="0" conaffinity="0" />
  </worldbody>
</mujoco>